@model ClinicWebForm.Models.Document

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Model.Form.FormName</title>

    <script type="text/javascript">
        $(function () {
            $('#datetimepicker1').datetimepicker();
        });
    </script>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>@Model.Form.FormName</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @foreach (var item in Model.Fields)
            {
                <div class="form-group row">
                    @Html.LabelFor(model => item.FieldValue, item.FieldType)
                    <div class="col-md-offset-2 col-md-10">
                        @Html.EditorFor(model => item.FieldValue)
                    </div>
                </div>
            }

            @foreach (var item in Model.Questions)
            {
                switch (item.DataType.DataTypeValue)
                {
                    case "Date":
                        <div class="form-group row">
                            @Html.LabelFor(model => item.QuestionDescription, item.QuestionDescription)
                            <div class="col-md-offset-2 col-md-10">
                                <div class='input-group date' id='datetimepicker1'>
                                    <input type='text' class="form-control" />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        break;
                    default:
                    <div class="form-group row">
                        @Html.LabelFor(model => item.QuestionDescription, item.QuestionDescription)
                        <div class="col-md-offset-2 col-md-10">
                            @Html.EditorFor(model => item.Answer)
                        </div>
                    </div>
                        break;
                }
            }

            <div class="form-group row">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>

</html>
