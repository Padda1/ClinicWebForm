@model ClinicWebForm.Models.QuestionCategoryViewModel

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Questions</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @foreach (var questionCategories in Model.QuestionCategories)
            {
                foreach (var question in questionCategories.Questions)
                {
                    @Html.Label(question.QuestionDescription, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => question.QuestionValue, new { htmlAttributes = new { @class = "control-label col-md-10" } })
                    <br />
                }
            }
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
